<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="db8317ac-800a-4ea0-81b1-e928d3324784" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/10.0/project-config.xsd">
  <name>functional_local</name>
  <description>deploys app to local test server and runs functional tests</description>
  <settings>
    <options>
      <option name="artifactRules" value="cover =&gt; coverage&#xA;nosetests.xml" />
    </options>
    <parameters />
    <build-runners>
      <runner id="RUNNER_4" name="Deploy on local test server" type="ssh-exec-runner">
        <parameters>
          <param name="jetbrains.buildServer.deployer.targetUrl" value="192.168.1.91" />
          <param name="jetbrains.buildServer.deployer.username" value="chef_user" />
          <param name="jetbrains.buildServer.sshexec.authMethod" value="DEFAULT_KEY" />
          <param name="jetbrains.buildServer.sshexec.command" value="sudo chef-client" />
          <param name="secure:jetbrains.buildServer.deployer.password" value="zxx1dbfc67c704bf2a5000b38efea86eceecae32ff86f8ee6e6a27480be83c72752aa83b0e05c344335775d03cbe80d301b" />
          <param name="teamcity.step.mode" value="default" />
          <param name="teamcitySshKey" value="teamcity server ssh key" />
        </parameters>
      </runner>
      <runner id="RUNNER_5" name="Functional Tests (against test server)" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#! /bin/bash
export WORKON_HOME=$HOME/.envs
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3
source /usr/local/bin/virtualenvwrapper.sh
workon formalign
cp $HOME/settings/settings_admin.py ./
cp $HOME/settings/configuration.py ./configuration.py
python -m nose ./formalign/functional_tests/tests --with-xunit]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Formalign_Formalign" />
    </vcs-settings>
    <requirements>
      <equals id="RQ_1" name="teamcity.agent.name" value="teamcity-agent1" />
    </requirements>
    <build-triggers>
      <build-trigger id="TRIGGER_1" type="buildDependencyTrigger">
        <parameters>
          <param name="afterSuccessfulBuildOnly" value="true" />
          <param name="dependsOn" value="Formalign_Build" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <build-extensions>
      <extension id="BUILD_EXT_1" type="xml-report-plugin">
        <parameters>
          <param name="xmlReportParsing.reportDirs" value="nosetests.xml" />
          <param name="xmlReportParsing.reportType" value="junit" />
          <param name="xmlReportParsing.verboseOutput" value="true" />
        </parameters>
      </extension>
    </build-extensions>
    <dependencies>
      <depend-on sourceBuildTypeId="Formalign_Build">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
      <depend-on sourceBuildTypeId="Formalign_DeployToTest">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

