<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="4dc7dec3-a8c4-4f6a-83f8-c2cec5c259a5" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/10.0/project-config.xsd">
  <name>install_desktop_requirements</name>
  <description>runs selenium acceptance tests</description>
  <settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_8" name="install requirements (on desktop agent)" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#! /bin/bash
export WORKON_HOME=$HOME/.envs
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3
source /usr/local/bin/virtualenvwrapper.sh
workon formalign
pip install -r requirements.txt]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Formalign_Formalign" />
    </vcs-settings>
    <requirements>
      <equals id="RQ_3" name="teamcity.agent.name" value="teloche" />
    </requirements>
    <build-triggers>
      <build-trigger id="TRIGGER_2" type="buildDependencyTrigger">
        <parameters>
          <param name="afterSuccessfulBuildOnly" value="true" />
          <param name="dependsOn" value="Formalign_Build" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <dependencies>
      <depend-on sourceBuildTypeId="Formalign_Build">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

