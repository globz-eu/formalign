<?xml version="1.0" encoding="UTF-8"?>
<build-type xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" uuid="1615596c-5a16-490c-b0fd-ac48bcc33c3e" xsi:noNamespaceSchemaLocation="http://www.jetbrains.com/teamcity/schemas/10.0/project-config.xsd">
  <name>functional_production</name>
  <description>runs functional tests on production server</description>
  <settings>
    <parameters />
    <build-runners>
      <runner id="RUNNER_10" name="Functional Tests (against production server)" type="simpleRunner">
        <parameters>
          <param name="script.content"><![CDATA[#! /bin/bash
export WORKON_HOME=$HOME/.envs
export VIRTUALENVWRAPPER_PYTHON=/usr/bin/python3
source /usr/local/bin/virtualenvwrapper.sh
workon formalign
cp $HOME/settings/settings_production_functional.json ./settings.json
export REDIS_URL='redis://localhost:6379/0'
python manage.py behave --tags ~@skip --no-skipped --junit --settings=settings_admin]]></param>
          <param name="teamcity.step.mode" value="default" />
          <param name="use.custom.script" value="true" />
        </parameters>
      </runner>
    </build-runners>
    <vcs-settings>
      <vcs-entry-ref root-id="Formalign_Formalign" />
    </vcs-settings>
    <requirements>
      <equals id="RQ_4" name="teamcity.agent.name" value="teamcity-agent1" />
    </requirements>
    <build-triggers>
      <build-trigger id="TRIGGER_3" type="buildDependencyTrigger">
        <parameters>
          <param name="dependsOn" value="Formalign_DeployToHeroku" />
        </parameters>
      </build-trigger>
    </build-triggers>
    <dependencies>
      <depend-on sourceBuildTypeId="Formalign_DeployToProduction">
        <options>
          <option name="take-started-build-with-same-revisions" value="true" />
          <option name="take-successful-builds-only" value="true" />
        </options>
      </depend-on>
    </dependencies>
    <cleanup />
  </settings>
</build-type>

